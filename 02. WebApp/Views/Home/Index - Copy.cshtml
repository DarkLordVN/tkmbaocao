@{
    ViewBag.Title = "Trang chủ";
    var typeUser = (string)ViewBag.typeUser;
    var capBac = (string)ViewBag.capBac;
    var userloginid = (int)ViewBag.userloginid;
    var donviloginid = (int)ViewBag.donviloginid;
}
<!-- Apexcharts JavaScript -->
<script type="text/javascript" src="/Assets/js/apexcharts.min.js"></script>
<!-- Custom core JavaScript -->
<script type="text/javascript" src="~/Assets/js/custom.js"></script>
<div class="row box-ct">
    <div class="col-12 col-lg-8 right-ct">
        <div class="row">
            <div class="col-12 mb-5">
                @{Html.RenderAction("VanBanDen", "Home", new { typeUser = typeUser, capBac = capBac, userloginid = userloginid, donviloginid = donviloginid });}
            </div>
            @if (!typeUser.Contains("vt"))
            {
                <div class="col-12 mb-5">
                    @{Html.RenderAction("HoSoCongViec", "Home", new { typeUser = typeUser, capBac = capBac, userloginid = userloginid, donviloginid = donviloginid });}
                </div>
                        }

            @if (typeUser.Contains("vt"))
            {
                <div class="col-12 mb-5">
                    @{Html.RenderAction("VanBanDiChart", "Home", new { typeUser = typeUser, capBac = capBac, userloginid = userloginid, donviloginid = donviloginid });}
                </div>
                <div class="col-12 mb-5">
                    @{Html.RenderAction("SoLuongVanBanDi", "Home", new { typeUser = typeUser, capBac = capBac, userloginid = userloginid, donviloginid = donviloginid });}
                </div>
                        }
            <div class="col-12 mb-5">
                @{Html.RenderAction("VanBanDuThaoDiChart", "Home", new { typeUser = typeUser, capBac = capBac, userloginid = userloginid, donviloginid = donviloginid });}
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-4 sidebar">
        <div class="row ml-lg-0">
            <div class="col-12 mb-5">
                @*@{Html.RenderAction("ThongBaoMoi", "Home", new { typeUser = typeUser, capBac = capBac, userloginid = userloginid, donviloginid = donviloginid });}*@
                <div class="card card-cascade narrower">

                    <!-- Card image -->
                    <div class="view view-cascade gradient-card-header f-bg1">
                        <h6 class="mb-0 text-uppercase"><i class="fal fa-bell mr-3"></i>Thông báo mới</h6>
                    </div>
                    <!-- Card image -->
                    <!-- Card content -->
                    <div class="card-body card-body-cascade" id="thongbaomoi">
                        <ul class="list-unstyled" id="reloadNotificationRights">
                            @Html.Raw(ViewBag.ThongBao)
                        </ul>
                    </div>
                    <!-- Card content -->
                </div>
            </div>
            @if (typeUser.Contains("vt") || typeUser.Contains("ld") || (SessionInfo.CurrentUser != null && SessionInfo.CurrentUser.TenDangNhap == "admin"))
            {
                <div class="col-12 mb-5">
                    <div class="card card-cascade narrower">

                        <!-- Card image -->
                        <div class="view view-cascade gradient-card-header f-bg1 mb5pt">
                            <a href="/LichLanhDao/IndexView" title="Lịch làm việc lãnh đạo" class="mb-0 text-uppercase cfff"><i class="fal fa-calendar-alt mr-3"></i>Lịch làm việc lãnh đạo</a>
                        </div>
                        @*<!-- Card image -->
                        <!-- Card content -->
                        <div class="card-body card-body-cascade">
                                <ul class="list-group list-group-flush" id="reloadLichLamViecLanhDao">
                                    @Html.Raw(ViewBag.LichLanhDao)
                                </ul>
                            </div>
                        <!-- Card content -->*@

                    </div>
                </div>
            }
        </div>
    </div>
</div>


